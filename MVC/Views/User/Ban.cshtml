@model BanViewModel

@{
    ViewData["Title"] = "Ban User";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card card-login">
                <div class="card-header bg-warning text-white" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                    <h2 class="text-center h4 mb-0">Ban User</h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-center mb-4"><strong>Username:</strong> @Model.UserName</p>
                    <form asp-action="BanUser" asp-controller="User" method="post">
                        <input type="hidden" name="email" value="@Model.UserName" />
                        
                        <div class="mb-4">
                            <label for="bannedTo" class="form-label">Banned Until:</label>
                            <input type="date" id="bannedTo" name="BannedTo" class="form-control" />
                        </div>
                        
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-person-x me-2"></i>Ban User
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>